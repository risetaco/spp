---
import Layout from "../layouts/main.astro";
import Feature from "../components/feature.astro";
import Safe from "../components/safe.astro";
import Question from "../components/question.astro";
import { Picture } from "astro:assets";
import featureHero from "../assets/feature.png";
import Download from "../components/download.astro";
import features from "../configs/features";

import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t("nav.features")}>
  <div class="w-screen relative overflow-hidden">
    <Picture src={featureHero} alt="Spay" class="object-cover w-full h-full md:h-[calc(100vh-4rem)]" loading="eager" />
    <div class="absolute w-full bottom-6 inset-x-0 p-12 text-white space-y-8">
      <p class="font-bold text-4xl text-white text-center">What Can You Do With ShopeePay</p>
      <a
        href="https://shopee.ph/m/shopeepay"
        class="bg-primary text-white px-8 py-4 rounded-full block text-center hover:bg-opacity-80 w-48 transition-colors duration-300 mx-auto"
      >
        Get Started
      </a>
    </div>
  </div>
  <div class="container mx-auto">
    <Feature features={features} />
  </div>
  <Safe />
  <Question />
  <Download />
</Layout>
