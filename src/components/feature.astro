---
import { type Feature } from "../types";

interface Props {
  features: Feature[];
}

const { features } = Astro.props;
---

<div class="p-8">
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-1 md:gap-8">
    {
      features.map((feature) => (
        <div class="bg-white p-8 hover:shadow-md rounded-lg flex items-center gap-2">
          <img src={feature.icon} alt="icon" class="w-20 h-20 mx-auto" />
          <div class="text-left flex-grow">
            <h3 class="text-xl mt-4">{feature.title}</h3>
            <p class="mt-2 text-gray-500">{feature.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>
