---
import Layout from "../layouts/main.astro";
import { Picture } from "astro:assets";
import featureHero from "../assets/feature.png";
import MerchantPartner from "../components/merchant-partner.astro";
---

<Layout>
  <div class="w-screen relative overflow-hidden">
    <Picture src={featureHero} alt="Spay" class="object-cover w-full h-full md:h-[calc(100vh-4rem)]" />
    <div class="absolute w-full bottom-6 inset-x-0 p-12 text-white space-y-8">
      <p class="font-bold text-4xl text-white text-center">Be a ShopeePay Merchant</p>
      <a
        href="https://shopee.ph/m/shopeepay"
        class="bg-primary text-white px-8 py-4 rounded-full block text-center hover:bg-opacity-80 w-48 transition-colors duration-300 mx-auto"
      >
        Message Us
      </a>
    </div>
  </div>
  <div class="container mx-auto">
    <MerchantPartner />
  </div>
</Layout>
