---
import benefits from "../configs/benefits";
---

<div class="p-8 lg:px-60">
  <h2 class="text-2xl text-center mb-8">Benefits of Using ShopeePay</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-1 md:gap-8">
    {
      benefits.map((benefit) => (
        <div class="bg-white p-8 hover:shadow-md rounded-lg flex sm:flex-col items-center gap-2">
          <img src={benefit.icon} alt="icon" class="w-20 h-20 mx-auto aspect-square object-cover" />
          <div class="text-left sm:text-center flex-grow">
            <h3 class="text-xl mt-4">{benefit.title}</h3>
            <p class="mt-2 text-gray-500">{benefit.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>
