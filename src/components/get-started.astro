---
import getStarted from "../configs/get-started";
---

<div class="p-12">
  <h2 class="text-2xl text-center mb-8">Get started on ShopeePay!</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {
      getStarted.map((benefit) => (
        <div class="bg-white p-8 border border-gray-200 hover:shadow-md rounded-lg gap-2">
          <img src={benefit.icon} alt="icon" class="w-20 h-20 mx-auto" />
          <h3 class="text-center text-xl mt-4">{benefit.title}</h3>
          <p class="text-center mt-2 text-gray-500 line-clamp-2" title={benefit.description}>
            {benefit.description}
          </p>
          <a
            aria-label={benefit.alt ?? "Learn more"}
            href={benefit.url}
            target="_blank"
            class="bg-primary text-white px-4 py-2 rounded-full mt-4 block text-center hover:bg-opacity-80 transition-colors duration-300"
          >
            {benefit.cta ?? "Learn more"}
            <span class="sr-only">{benefit.alt}</span>
          </a>
        </div>
      ))
    }
  </div>
</div>
