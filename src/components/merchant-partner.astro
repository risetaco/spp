---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/merchant-partners/*.{jpeg,jpg,png,gif}");
---

<div class="p-12">
  <h2 class="text-2xl text-center mb-8 font-bold">Merchant Partners</h2>
  <div class="grid grid-cols-4 md:grid-cols-5 lg:grid-cols-6 gap-4">
    {
      Object.keys(images).map((imagePath) => (
        <Picture
          src={images[imagePath]()}
          alt="merchant partner"
          class="border rounded size-full max-w-24 max-h-24 object-contain p-2 hover:shadow-md"
        />
      ))
    }
  </div>
</div>
